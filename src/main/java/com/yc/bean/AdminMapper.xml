<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yc.bean.AdminMapper">
	<!-- 加入带日志的ehcache缓存 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache">
	</cache>

	<!-- 查询用户名是否存在-->
	<select id="isUserExists" resultType="Integer" parameterType="Admin">
		select count(1) from admin where aname=#{aname} and apwd=#{apwd}
	</select>

	<!-- 根据用户名和密码查询用户(登录)-->
	<select id="getUserByLogin" resultType="Admin" parameterType="Admin">
		select * from admin where aname=#{aname} and apwd=#{apwd}
	</select>
	
</mapper>